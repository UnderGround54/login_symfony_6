{% extends 'base.html.twig' %}

{% block title %} Utilisateur {% endblock %}

{% block body %}
<div class="container mt-4">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Email</th>
        <th scope="col">Nom et Pr√©nom</th>
        <th scope="col">Pseudo </th>
        <th scope="col">Action </th>
      </tr>
    </thead>
    {% for user in users %}
    <tbody>
      {% if (user.id % 2 == 1) %}
        <tr class="table-active">
        <th scope="row">{{ user.id }}</th>
        <td>{{ user.email }}</td>
        <td>{{ user.nom }}</td>
        <td>{{ user.pseudo }}</td>
        <td class="">
          <a href="{{ path('user.update', { 'id': user.id }) }}" class="btn btn-primary btn-sm"> <i class="bi bi-pencil-square"></i> </a> 
          <a href="{{ path('user.delete', { 'id': user.id }) }}" class="btn btn-secondary btn-sm"><i class="bi bi-trash3-fill"></i></a>
        </td>
      </tr>
      {% else %}
      <tr class="table-dark">
        <th scope="row">{{ user.id }}</th>
        <td>{{ user.email }}</td>
        <td>{{ user.nom }}</td>
        <td>{{ user.pseudo }}</td>
        <td class="">
          <a href="{{ path('user.update', { 'id': user.id }) }}" class="btn btn-primary btn-sm"> <i class="bi bi-pencil-square"></i> </a> 
          <a href="{{ path('user.delete', { 'id': user.id }) }}" class="btn btn-secondary btn-sm"><i class="bi bi-trash3-fill"></i></a>
        </td>
      </tr>
      {% endif %}
    </tbody>
    {% endfor %}
  </table>
</div>
{% endblock %}
